<!-- container for setting up Meet ups and blogs -->
<div class="container">
    <h1 class="choices">What would you like to do?</h1>
    <div class="row">

        <!-- Meet up Join -->
        <div class="container col-md-6 aboutUs">
            <div class="card">
                <a href="/meetups">
                <img class='imgSize'
                    src="https://drinksfeed.com/wp-content/blogs.dir/1/files/2019/05/Book_Club_Wines_Getty_1920x1280.jpg"
                    class="card-img-top" alt="MeetUps"></a>
                <div class="card-body">
                    <h5 class="card-title">Meet Up</h5>
                    <p class="card-text">Want to set a Meet Up? Simply join and enjoy!</p>
                    <a href="/meetups" class="btn btn-primary">Get Started </a>
                </div>
            </div>
        </div>
        <!-- Blog Join -->
        <div class="container col-md-6 aboutUs">
            <div class="card">
                <a href="/blogs">
                <img class='imgSize'
                    src="https://www.telemediaonline.co.uk/wp-content/uploads/2019/03/Blogging-shutterstock_225278260.jpg"
                    class="card-img-top" alt="Blogs"></a>
                <div class="card-body">
                    <h5 class="card-title">Blog</h5>
                    <p class="card-text">Want to Blog? Simply join and enjoy!</p>
                    <a href="/blogs" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>

        <!-- End of Row  -->
    </div>
    <!-- End of Container for Join -->
</div>

<br>


<section id="meetUps" class="container meetupsmargins">
    <h1>Checkout Some Events!</h1>
    <br>
    {{#each meetups}}

    <!-- Meet up API Examples -->

    <div class="container ">
        <div class="row showBox">
            <div class="col col-6">
                <h3 class="row namePad">{{firstName}} {{lastName}}</h3>


                <p>This event is for "{{genre}}" at the reading level of "{{readingLevel}}" with the status of
                    "{{readingStatus}}"</p>

                <div class="row">
                    <div class="col-md-4">
                        <a href="/meetups" class="btn btn-warning meetBlogBtns">Meetup</a>
                    </div>
                    <div class="col-md-8">
                        <p>Joing this Session!</p>
                    </div>
                </div>
                <div class="row joinandBlog">
                    <div class="col-md-4">
                        <a href="/blogs" class="btn btn-warning meetBlogBtns">Blog</a>
                    </div>
                    <div class="col-md-8 ">
                        <p>Free!</p>
                    </div>
                </div>
            </div>
         
            <div class="col-sm-6  eventimg">
            </div>

        </div>
    </div>



    {{else}}
    <p>Meet Up has paused</p>
    {{/each}}
</section>

