<section id="add" class="container marginTopPG">
<div class="form-wrap">
    <h1>Add a Meetup</h1>

    {{#each errors}}
    <div class="error">
        {{text}}
    </div>
    {{/each}}
    <form action="/meetups" method="POST">
        <div class="input-group">
            <lable class='infoText' for="firstName">First Name</lable>
            <input type="text" name='firstName' id='firstName' class="input-box"
                placeholder="What is your first name?" maxlength="100"
                required=""
                value={{firstName}}></input>
        </div>
        <div class="input-group">
            <lable class='infoText' for="lastName">Last Name</lable>
            <input type="text" name='lastName' id='lastName' class="input-box"
                placeholder="What is your last name?" maxlength="100" 
                required="" 
                value={{lastName}}></input>
        </div>
        <div class="input-group">
            <lable class='infoText' for="email">Email</lable>
            <input name='email' id='email' class="input-box" 
            type='email'
            placeholder="Enter Email"
            required=""
                row='10'>{{email}}</input>
        </div>
        <div class="input-group">
            <lable class='infoText' for="bookTitle">Book Title</lable>
            <input type="text" name='bookTitle' id='bookTitle' class="input-box"
                placeholder="What is the book's title?" maxlength="100" 
                required=""
                value={{bookTitle}}></input>
        </div>
        <div class="input-group">
            <lable class='infoText' for="bookAuthor">Book Author</lable>
            <input type="text" name='bookAuthor' id='bookAuthor' class="input-box"
                placeholder="Who is the author of the book?" maxlength="100"
                required=""
                value={{bookAuthor}}></input>
        </div>
        <div class="input-group">
            <lable class='infoText' for="genre">Genre</lable>
            <select type="text" name='genre' id='genre' class="input-box" 
            required=""
            value={{genre}}>
                <option value=""></option>
                <option>Realistic Fiction</option>
                <option>Historical Fiction</option>
                <option>Non-Fiction</option>
                <option>Traditional Literature</option>
            </select>
        </div>
        <div class="input-group">
            <lable class='infoText' for="readingLevel">Reading Level</lable>
            <select type="text" name='readingLevel' id='readingLevel' class="input-box"
            required=""
            value={{readingLevel}}>
                <option value=""></option>
                <option value='SW'>SW - Site words (4 to 6 years old)</option>
                <option value='CB'>CB - Chapter Books (7 to 9 years old)</option>
                <option value='AR' disabled>AR - Advanced Reader (coming soon)</option></select>
        </div>
        <div class="input-group">
            <lable class='infoText' for="readingStatus">Reading Status</lable>
            <select name='readingStatus' id='readingStatus' class="input-box"
            required=""
            value={{readingStatus}}>
                <option value=""></option>
                <option value="1"> 1- just_started</option>
                <option value="2"> 2- mid-way</option>
                <option value="3"> 3- soon_to_complete</option></select>
        </div>
        <input type="submit" value="Add Meet Up" class="btn btn-warning formBlogBtn">
    </form>
</div>
</section>



