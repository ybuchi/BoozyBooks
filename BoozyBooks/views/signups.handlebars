  <div class="container">

    <br>

    <!-- Jumbotron -->
    <div class="jumbotron" id="signup-jumbotron">
      <h1 class="text-center" id="signup-title">Sign-Up Today!</h1>
    </div>

    <div class="row">

      <!-- Sign-Up Card-->
      <div class="col-lg-12">
        <div class="card card-default">
          <div class="card-header">
            New Member Sign-Up
          </div>
          <div class="card-body">

            <!-- Sign-up Form (note the various input "types")-->
            <form role="form" action="/signups" method="POST">
              <div class="form-group row">
                <label for="name-input">First Name:</label>
                <input name="firstName" class="form-control" id="first-name" type="text" placeholder="First Name">
              </div>
              <div class="form-group row">
                <label for="name-input">Last Name:</label>
                <input name="lastName" class="form-control" id="last-name" type="text" placeholder="Last Name">
              </div>
            <div class="form-group row">
                <label for="readinglevel">Reading Level</label>
                <select name="readingLevel" class="form-control" id="reading-level">
                <option value = 'SW'>SW - Site words</option>
                <option value = 'CB'>CB - Chapter Books</option>
                <option value = 'AR'>AR - Advanced Reader</option>
                </select>
                </div>
                <div class="form-group row">
                <label for="book-title">Book Title</label>
                <input name="bookTitle"class="form-control" id="book-title" type="text">
              </div>
                <div class="form-group row">
                <label for="book-author">Book Author</label>
                <input name="bookAuthor" class="form-control" id="book-author" type="text">
              </div>
                <div class="form-group row">
                    <label for="genre">Genre</label>
                    <select name="genre" class="form-control" id="genre">
                    <option>Realistic Fiction</option>
                    <option>Historical Fiction</option>
                    <option>Non-Fiction</option>
                    <option>Traditional Literature</option>
                    </select>
                </div>
                <div class="form-group row">
                <label for="reading-status">Reading Status</label>
                <input name="readingStatus" class="form-control" id="reading-status" type="text">
              </div>
              <div class="form-group row">
                <label for="email">Email:</label>
                <input name="email" class="form-control" id="email" type="email">
              </div>
              <button class="btn btn-primary" id="submit-userbookinfo" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>

    </div>

  </div>




